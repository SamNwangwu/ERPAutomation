    "triggers": {
      "When_an_item_is_created": {
        "recurrence": {
          "frequency": "Minute",
          "interval": 1
        },
        "evaluatedRecurrence": {
          "frequency": "Minute",
          "interval": 1
        },
        "splitOn": "@triggerBody()?['value']",
        "type": "ApiConnection",
        "inputs": {
          "host": {
            "connection": {
              "name": "@parameters('$connections')['sharepointonline']['connectionId']"
            }
